{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}


{% block body %}
   <h2>Welcome</h2>
    {{ form_start(form) }}
        {{ form_row(form.fullname) }}
        {# render each row and field in the embedded form, in this example it's rendering the experience (Exp) fiels as rows #}
        <div class="col-sm-8 col-sm-offset-2" id="exp_list" data-prototype="{{ form_widget(form.books.vars.prototype)|e('html_attr') }}">
            {% for row in form.books %}
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <strong>{{ row.vars.value.name }}</strong>
                    </div>
                    <div class="panel-body">
                        {{ form_row(row) }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
