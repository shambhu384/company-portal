{% extends 'admin/base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <div class="right_col" role="main">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Slug</th>
                <th>Hits</th>
                <th>Timecreated</th>
                <th>Timemodified</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.id }}</td>
                    <td>{{ page.title }}</td>
                    <td>{{ page.content }}</td>
                    <td>{{ page.slug }}</td>
                    <td>{{ page.hits }}</td>
                    <td>{{ page.timecreated }}</td>
                    <td>{{ page.timemodified }}</td>
                    <td>
                        <a href="{{ path('admin_page_show', {'id': page.id}) }}">show</a>
                        <a href="{{ path('admin_page_edit', {'id': page.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_page_new') }}">Create new</a>
    </div>
{% endblock %}
